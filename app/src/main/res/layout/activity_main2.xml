<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Existing Device Container -->
        <LinearLayout
            android:id="@+id/device_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- New Execution Log TextViews -->
        <TextView
            android:id="@+id/log_step1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:paddingTop="10dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/log_step2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:paddingTop="4dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/log_step3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:paddingTop="4dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/log_step4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:paddingTop="4dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/log_step5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:paddingTop="4dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/log_step6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:paddingTop="4dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/log_step7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:paddingTop="4dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/log_received"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:paddingTop="4dp"
            android:textColor="#000000" />
    </LinearLayout>

</ScrollView>
